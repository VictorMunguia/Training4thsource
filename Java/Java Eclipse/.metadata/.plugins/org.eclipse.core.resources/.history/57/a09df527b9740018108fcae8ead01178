package polimorfismoBasic;
import java.util.Random;

public class mainClass {
	public static void main(String[] args) {
		animales[] listaAnimales1 = new animales[5];
		int numeroRandom;
		pescado p1 = new pescado();
		puerco pu1 = new puerco();
		perro pe1 = new perro();
		Random aleatorio = new Random();
		
		for(int x = 0; x <5;x++) {
			numeroRandom = 1+aleatorio.nextInt(4);
			System.out.println(numeroRandom);
			
			switch(numeroRandom) {
			case 1:
				listaAnimales1[x] = p1;
				break;
			case 2:
				listaAnimales1[x] = pu1;
			}
			
			
		}
		
		
	}
}
