
public class timeClass {
	private int hora;
	private int minuto;
	private int segundo;
	
	
	public void setTime(int h, int m, int s) {
		if(h >=0 && h<=24){
			hora = h ;
		}
		else {
			hora = 0;
		}
		
		if(m >=0 && m<=60){
			minuto = m ;
		}
		else {
			minuto = 0;
		}
		
		if(s >=0 && s<=60){
			segundo = s;
		}
		else {
			segundo = 0;
		}
		
	}
	
	public String toMilitary() {
		return String.format("%02d:%02d:%02d",hora,minuto,segundo);
	}
}
